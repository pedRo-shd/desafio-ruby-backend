<h2>Store <%= store.brand %>  - Owner <%= store.owner %></h2>

<table>
  <thead>
    <tr>
      <th scope="col">Transacation type</th>
      <th scope="col">Amount</th>
      <th scope="col">Document Value</th>
      <th scope="col">Card Number</th>
      <th scope="col">Occurrence At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% financial_transactions.each do |financial_transaction| %>
      <tr>
        <td><%= financial_transaction.transaction_kind %></td>
        <td><%= financial_transaction.amount %></td>
        <td><%= financial_transaction.document_value %></td>
        <td><%= financial_transaction.card_number %></td>
        <td><%= financial_transaction.occurrence_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<div class="card-footer text-muted">
  Total Account Balance: <%= number_to_currency(account_balance_totalized) %>
</div>
